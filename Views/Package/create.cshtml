@model Courier_Tracking_and_Delivery_System.Models.Package

<h2 class="text-center mb-4">Create Package</h2>

<form asp-action="Create" class="container">
    <div class="form-group row mb-3">
        <div class="col-md-6">
            <label asp-for="Name" class="form-label">Name:</label>
            <input asp-for="Name" class="form-control" placeholder="Enter Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="PickupAddress" class="form-label">Pickup Address:</label>
            <input asp-for="PickupAddress" class="form-control" placeholder="Enter Pickup Address" />
            <span asp-validation-for="PickupAddress" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="DeliveryAddress" class="form-label">Delivery Address:</label>
            <input asp-for="DeliveryAddress" class="form-control" placeholder="Enter Delivery Address" />
            <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col-md-6">
            <label asp-for="PackageType" class="form-label">Package Type:</label>
            <input asp-for="PackageType" class="form-control" placeholder="Enter Package Type" />
            <span asp-validation-for="PackageType" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="PreferredDeliveryTime" class="form-label">Preferred Delivery Time:</label>
            <input asp-for="PreferredDeliveryTime" class="form-control" placeholder="Enter Preferred Delivery Time" />
            <span asp-validation-for="PreferredDeliveryTime" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col-md-6 offset-md-3">
            <label asp-for="DeliveryBy" class="form-label">Need Delivery Before:</label>
            <input asp-for="DeliveryBy" class="form-control" placeholder="Enter Delivery By" />
            <span asp-validation-for="DeliveryBy" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary btn-lg">Create</button>
    </div>
</form>


